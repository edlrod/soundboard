# Provider: "lastfm" (default) or "listenbrainz"
VITE_API_PROVIDER=lastfm

# Required for Last.fm only (not needed for ListenBrainz)
VITE_LASTFM_API_KEY=your_api_key

# Optional: set to lock to a single profile (personal mode)
# VITE_USERNAME=your_username

# Optional: default time period (7day, 1month, 3month, 6month, 12month, overall)
VITE_DEFAULT_PERIOD=overall

# Optional: Deezer proxy URL for artist images in production
# Deploy the worker in /worker and set the URL here
# VITE_DEEZER_PROXY_URL=https://soundboard-deezer-proxy.your-subdomain.workers.dev
